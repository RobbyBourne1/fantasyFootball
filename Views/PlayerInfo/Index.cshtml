                    <th>DEF DAVE</th>
                    <th>DEF DAVE Rank</th>
                    <th>DEF Pass Rank</th>
                    <th>DEF Rush Rank</th>
                </tr>   
                }
                 @if(item.IsNull == "true")
                {
                    <h2>Football Outsiders does not have any data for this player</h2>
                }
        }
        </thead>
        <tbody>
        @foreach(var item in Model.FootBallO)
        {
            @if(item.IsNull == "true")
            {
                <h2>Football Outsiders only ranks the top 25 for this position</h2>
            }
