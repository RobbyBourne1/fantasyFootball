        @foreach(var item in Model.FootBallO)
        {       
                @if(item.Position == "qb")
                {
                <tr>
                    <th>DYAR</th>
                    <th>DYAR Rank</th>
                    <th>QBR</th>
                    <th>QBR Rank</th>
                    <th>Yards</th>
                    <th>Effective Yards</th>
                    <th>TDs</th>
                    <th>INTs</th>
                    <th>FLs</th>
                </tr>
                }
