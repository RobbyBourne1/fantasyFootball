<table id="example" class="table table-striped table-bordered col-sm-10" cellspacing="0" width="100%">
        <caption class=""><strong>Fantasy Outsiders Stats</strong></caption>
        <thead>
        @foreach(var item in Model.FootBallO)
        {
            @if(item.Position == "qb")
            {
            <tr>
                <th>DYAR</th>
                <th>DYAR Rank</th>
                <th>QBR</th>
                <th>QBR Rank</th>
                <th>Yards</th>
                <th>Effective Yards</th>
                <th>TDs</th>
                <th>INTs</th>
                <th>FLs</th>
            </tr>
            }
            @if(item.Position == "rb")
            {
            <tr>
                <th>DYAR</th>
                <th>DYAR Rank</th>
                <th>Succes Rate</th>
                <th>Yards</th>
                <th>Effective Yards</th>
                <th>TDs</th>
                <th>FLs</th>
            </tr>
            }
            @if(item.Position == "wr" || item.Position == "te")
            {
            <tr>
                <th>DYAR</th>
                <th>DYAR Rank</th>
                <th>Passes</th>
                <th>Catch Rate</th>
                <th>Yards</th>
                <th>Effective Yards</th>
                <th>TDs</th>
                <th>FLs</th>
            </tr>
            }
            @if(item.Position == "k")
            {
            <tr>
                <th>FGs/XP Ratio</th>
            </tr>
            }
            @if(item.Position == "def")
            {
             <tr>
                <th>DEF DVOA</th>
                <th>DEF DVOA Rank</th>
                <th>DEF DAVE</th>
                <th>DEF DAVE Rank</th>
                <th>DEF Pass Rank</th>
                <th>DEF Rush Rank</th>
            </tr>   
            }
        }
        </thead>
        <tbody>
        @foreach(var item in Model.FootBallO)
        {
            @if(item.Position == "qb")
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DYAR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DYARRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QBR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QBRRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EYards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TDs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.INTs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FumblesLost)
                </td>
            </tr>
            }
            @if(item.Position == "rb")
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DYAR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DYARRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SuccessRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EYards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TDs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FumblesLost)
                </td>
            </tr>
            }
            @if(item.Position == "wr" || item.Position == "te")
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DYAR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DYARRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passes)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.CatchRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EYards)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TDs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FumblesLost)
                </td>
            </tr>
            }
            @if(item.Position == "k")
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FGXPRatio)
                </td>
            </tr>
            }
            @if(item.Position == "def")
            {
             <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DefDVOA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefDVOARank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefDAVE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefDAVERank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DEFPassRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DEFRushRank)
                </td>
            </tr>   
            }
        }
        </tbody>
</table>
