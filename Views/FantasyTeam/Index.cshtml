@model fantasyFootball.Models.PlayerTeamViewModel


<div class="container">

<h1 class="text-center">Your Fantasy Football Team(s)</h1>
<br>
<div class="dropdown row justify-content-center">
  <button class="btn btn-default dropdown-toggle col-sm-10 col-sm-offset-1" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Fantasy Teams
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu col-sm-12" aria-labelledby="dropdownMenu1">
        @foreach(var item in Model.FantasyTeam)
            {
                <li>
                    <a asp-action="FantasyTeam" asp-route-id=@item.Id>@item.TeamName</a>
                </li>
            }
  </ul>
</div>
<br>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Player Name</th>
                <th>Position</th>
                <th>Team</th>
                <th>Remove Player</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.FantasyPlayers)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.displayName)</td>
                    <td>@Html.DisplayFor(modelItem => item.position)</td>
                    <td>@Html.DisplayFor(modelItem => item.team)</td>
                    <td><a href="">Remove Player</a></td>
                </tr>
            }
        </tbody>
</table>
    <div class="row">
        <div class="col-sm-6">
          <a asp-controller="PlayersInput" asp-action="Create">
            <button class="btn btn-primary btn-lg btn-block">Add Players</button>
          </a>
        </div>
        <div class="col-sm-6">
          <a asp-controller="InputTeam" asp-action="Create">
            <button class="btn btn-primary btn-lg btn-block col-sm-6">Input New Team Here</button>
          </a>
          </div>
    </div>

</div>
