@model IEnumerable<fantasyFootball.Models.FantasyTeamModel>


<div class="container">

<h1 class="text-center">Your Fantasy FootBall Team(s)</h1>
<br>
<div class="dropdown row justify-content-center">
  <button class="btn btn-default dropdown-toggle col-sm-10 col-sm-offset-1" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Fantasy Teams
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu col-sm-12" aria-labelledby="dropdownMenu1">
    <li><a href="#">Action</a></li>
    <li><a href="#">Another action</a></li>
    <li><a href="#">Something else here</a></li>
    <li role="separator" class="divider"></li>
    <li><a href="#">Separated link</a></li>
  </ul>
</div>
    <!-- <div class="form-group">
        <label asp-for="TeamSelect" class="control-label"></label>
        <select asp-for="TeamSelect" class ="form-control teamID" asp-items="TeamSelect.Id"></select>
    </div> -->
<br>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Office</th>
                <th>Age</th>
                <th>Start date</th>
                <th>Salary</th>
            </tr>
        </thead>
        <tbody>
            <tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TeamName)</td>
                </tr>
            }
            </tr>
        </tbody>
</table>
        <div class="col-sm-6 col-sm-offset-3">
          <a asp-controller="PlayersInput" asp-action="Create">
            <button class="btn btn-primary btn-lg btn-block">Add Players</button>
          </a>
        </div>

</div>
